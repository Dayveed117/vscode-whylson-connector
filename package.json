{
  "name": "whylson-connector",
  "displayName": "whylson-connector",
  "description": "VSCode extension enabling formal verification of Tezos smart contracts through the use of Whylson tool.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.67.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:ligo",
    "onLanguage:mligo",
    "onLanguage:jsligo",
    "onLanguage:religo"
  ],
  "extensionDependencies": [
    "ligolang-publish.ligo-vscode"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Whylson-Connector",
      "properties": {
        "whylson-connector.onSaveActions": {
          "type": "object",
          "order": 0,
          "description": "Control actions performed on saving ligo documents.",
          "properties": {
            "createEntry": {
              "type": "boolean",
              "description": "Create entry in contracts.json."
            },
            "openView": {
              "type": "boolean",
              "description": "Open michelson view if closed (entry must exist)."
            }
          },
          "additionalProperties": false,
          "default": {
            "createEntry": false,
            "openView": true
          }
        },
        "whylson-connector.highlightAnnotations": {
          "type": "boolean",
          "default": true,
          "description": "Highlight whylson annotated lines in ligo documents.",
          "scope": "window"
        },
        "whylson-connector.showOutputMessages": {
          "type": "boolean",
          "default": true,
          "description": "Have extension occasionally send messages on Whylson-Connector output channel.",
          "scope": "window"
        }
      }
    },
    "commands": [
      {
        "command": "whylson-connector.check-ligo",
        "category": "Whylson",
        "title": "Check Ligo"
      },
      {
        "command": "whylson-connector.start-session",
        "enablement": "resourceLangId =~ /^(m|js|re)?ligo$/",
        "category": "Whylson",
        "title": "Start Whylson Session"
      },
      {
        "command": "whylson-connector.open-michelson-view",
        "enablement": "resourceLangId =~ /^(m|js|re)?ligo$/",
        "title": "Open Michelson View",
        "category": "Whylson",
        "icon": "$(go-to-file)"
      },
      {
        "command": "whylson-connector.remake-dot-whylson",
        "enablement": "resourceLangId =~ /^(m|js|re)?ligo$/",
        "category": "Whylson",
        "title": "Remake .whylson Folder"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "whylson-connector.open-michelson-view",
          "group": "navigation",
          "when": "resourceLangId =~ /^(m|js|re)?ligo$/"
        }
      ]
    },
    "snippets": [
      {
        "language": "ligo",
        "path": "./snippets.json"
      },
      {
        "language": "mligo",
        "path": "./snippets.json"
      },
      {
        "language": "jsligo",
        "path": "./snippets.json"
      },
      {
        "language": "religo",
        "path": "./snippets.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/vscode": "^1.67.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "eslint": "^8.16.0",
    "typescript": "^4.7.2"
  }
}
